@section scripts
{
    <style type="text/css">
        .AlinharDireita {
            text-align: right;
        }

        .AlinharCentro {
            text-align: center;
        }
    </style>

    <script type="text/javascript" charset="utf-8">

        $(document).ready(function () {
            $(".ul li").removeClass("active");
            $('#PaginaInicial').addClass('active');

            $('#form-processar-analise').validate();

            $('#form-processar-analise').on('submit', function (e) {
                var isValid = $("#form-processar-analise").valid();
                if (isValid) {
                    e.preventDefault();

                    $("#grid").DataTable().draw();
                }
            });

            $('#grid').DataTable({
                columns: [
                    { data: "Descricao", name: "Descricao" },
                    { data: "QtdProduto", name: "QtdProduto", render: $.fn.dataTable.render.number('.', ',', 2, ''), sClass: "AlinharDireita" },
                    { data: "QtdProdutoUnificados", name: "QtdProdutoUnificados", render: $.fn.dataTable.render.number('.', ',', 2, ''), sClass: "AlinharDireita" },
                    { data: "TotalEntrada", name: "TotalEntrada", render: $.fn.dataTable.render.number('.', ',', 2, ''), sClass: "AlinharDireita" },
                    { data: "TotalSaida", name: "TotalSaida", render: $.fn.dataTable.render.number('.', ',', 2, ''), sClass: "AlinharDireita" },
                    { data: "TotalInicial", name: "TotalInicial", render: $.fn.dataTable.render.number('.', ',', 2, ''), sClass: "AlinharDireita" },
                    { data: "TotalFinal", name: "TotalFinal", render: $.fn.dataTable.render.number('.', ',', 2, ''), sClass: "AlinharDireita" }
                ],
                "iDisplayLength": 50,
                "aLengthMenu": [5, 50, 500, 1000, 10000],
                oLanguage: {
                    "sEmptyTable": "Nenhum registro encontrado",
                    "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando 0 até 0 de 0 registros",
                    "sInfoFiltered": "(Filtrados de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "_MENU_ resultados por página",
                    "sLoadingRecords": "Carregando...",
                    "sProcessing": "Processando...",
                    "sZeroRecords": "Nenhum registro encontrado",
                    "sSearch": "Pesquisar",
                    "oPaginate": {
                        "sNext": "Próximo",
                        "sPrevious": "Anterior",
                        "sFirst": "Primeiro",
                        "sLast": "Último"
                    },
                    "oAria": {
                        "sSortAscending": ": Ordenar colunas de forma ascendente",
                        "sSortDescending": ": Ordenar colunas de forma descendente"
                    }
                }
            });

            $("#analise-processar").select2({
                placeholder: "Selecione a análise que deseja processar...",
                allowClear: true
            });

            // Collapse Panel
