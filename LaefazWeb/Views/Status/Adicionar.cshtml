@using TDMWeb.Extensions
@{
    ViewBag.Titulo = "Status";
}

@section styles {
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/css")

    <style type="text/css">
        .form-control[readonly] {
            background-color: white;
        }

        .progress {
            position: relative;
        }

            .progress span {
                position: absolute;
                display: block;
                width: 100%;
                color: black;
            }
    </style>
}

@using (Html.BeginForm("Salvar", "Status", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="MAX_FILE_SIZE" value="314572800" />
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Adicionar Status</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                @Html.Label("descricao", "Descrição")
                @Html.TextBox("descricao", null, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="box-footer" align="right">
            <button type="submit" class="btn btn-primary" id="submit-form">Salvar</button>
        </div>
        <!-- /.box-body -->
    </div>
}
<!-- /.box -->
@section scripts
{
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/js")

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}