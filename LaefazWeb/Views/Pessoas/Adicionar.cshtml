@using TDMWeb.Extensions
@{
    ViewBag.Titulo = "Pessoas";
}

@section styles {
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/css")

    <style type="text/css">
        .form-control[readonly] {
            background-color: white;
        }

        .progress {
            position: relative;
        }

            .progress span {
                position: absolute;
                display: block;
                width: 100%;
                color: black;
            }
    </style>
}

@using (Html.BeginForm("Salvar", "Pessoas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="MAX_FILE_SIZE" value="314572800" />
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Adicionar Pessoa</h3>
        </div>

        <div class="box-body">

            <div class="row">
                <div class="col-xs-5">
                    @Html.Label("nome", "Nome")
                    @Html.TextBox("nome", null, new { @class = "form-control", required = "required" })
                </div>
                <div class="col-xs-3">
                    @Html.Label("idade", "Idade")
                    @Html.TextBox("idade", null, new { @class = "form-control", required = "required" })
                </div>
                <div class="col-xs-3">
                    @Html.Label("endereco", "Endereço")
                    @Html.TextBox("endereco", null, new { @class = "form-control", required = "required" })
                </div>


            </div>
            <div class="box-footer" align="right">
                <button type="submit" class="btn btn-primary" id="submit-form">Salvar</button>
            </div>
        </div>
    </div>








