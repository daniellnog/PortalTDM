@using TDMWeb.Extensions
@{
    ViewBag.Titulo = "Usuários";
}

@section styles {
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/css")

    <style type="text/css">
        .form-control[readonly] {
            background-color: white;
        }

        .progress {
            position: relative;
        }

            .progress span {
                position: absolute;
                display: block;
                width: 100%;
                color: black;
            }
    </style>
}

@using (Html.BeginForm("Salvar", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="MAX_FILE_SIZE" value="314572800" />
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Adicionar Tipo de Parâmetro</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-xs-4 form-group">
                    <div class="form-group">
                        @Html.Label("login", "Usuário")
                        @Html.TextBox("login", null, new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="col-xs-4 form-group">
                    <div class="form-group">
                        @Html.Label("senha", "Senha")
                        @Html.TextBox("senha", null, new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="col-xs-4 form-group">
                    <div class="form-group">
                        @Html.Label("confirmarSenha", "Confimar Senha")
                        @Html.TextBox("confirmarSenha", null, new { @class = "form-control", required = "required" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 form-group">
                    @Html.Label("projetoTDM", "Projetos TDM")
                    @Html.DropDownList("tdm", new SelectList(ViewBag.ListaTDM, "Id", "Descricao"), "", new
                   {
                       @class = "form-control select2 select2-hidden-accessible",
                       @multiple = "",
                       @tabindex = "-1",
                       @id = "list-tdm",
                       @style = "width: 100%; padding-right: 12px; padding-left: 12px; border-right-width: 1px;",
                   }
                        )
                </div>
            </div>
        </div>
        <div class="box-footer" align="right">
            <a href="@Url.Action("Index", "Usuario")" class="btn btn-danger" id="cancelar">Cancelar</a>
            <button type="submit" class="btn btn-primary" id="submit-form">Salvar</button>
        </div>
        <!-- /.box-body -->
    </div>
}
